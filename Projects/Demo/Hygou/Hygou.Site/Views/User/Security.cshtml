@{
    Layout = "../Shared/_UserAdminLayout.cshtml";
    var user = (CrowdMall.DataModels.User)ViewBag.CurrentUser;
}
<div class="user-panel-frame user-security">
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingOne">
                <div class="panel-title">
                    <div class="item-title">登录密码：</div>
                    <div class="item-desc">保障账户安全，建议您定期更换密码。</div>
                    <div class="item-status">已设置</div>
                    <div class="item-value">--</div>
                    <a class="btn btn-primary btn-sm" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-controls="collapseOne">修改</a>
                </div>
            </div>
            <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-2">
                            <form id="changePassword" class="form-horizontal">
                                <div class="form-group">
                                    <label for="cur_password" class="col-sm-4 control-label">当前密码：</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" name="cur_password" placeholder="请输入当前密码" maxlength="50">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="new_password" class="col-sm-4 control-label">新密码：</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" id="new_password" name="new_password" placeholder="请输入新密码" maxlength="50">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="repeat_password" class="col-sm-4 control-label">确认新密码：</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" name="repeat_password" placeholder="请再次输入新密码" maxlength="50">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-4 col-sm-8">
                                        <div class="message"></div>
                                        <button type="submit" class="btn btn-primary">修改密码</button>
                                    </div>
                                </div>
                            </form>


                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingTwo">
                <div class="panel-title">
                    <div class="item-title">手机号码：</div>
                    <div class="item-desc">您的手机号码即为您的账户。</div>
                    <div class="item-status">已设置</div>
                    <div class="item-value">@user.PhoneNumber</div>

                </div>
            </div>
            <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                <div class="panel-body">
                </div>
            </div>
        </div>

    </div>

    @*<div class="alert alert-info">
        <h4>注意:</h4>
        <p>微信授权用户首次绑定手机号，微信账户与PC端同手机号注册账号信息打通。</p>
    </div>*@
</div>
@section scripts{
    <script>
        window.boot("user-security");
    </script>
}