<div class="modal fade" id="addrEditModal" tabindex="-1" role="dialog" aria-labelledby="addrEditModal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="allCodesLabel">收货地址</h4>
			</div>
			<div class="modal-body">
				<form class="form-horizontal addr-edit">
					<div class="form-group">
						<label class="control-label col-sm-3">收货人姓名</label>
						<div class="col-sm-4">
							<input class="form-control" type="text" placeholder="请填写收货人姓名" maxlength="4" v-model="name" name="ContactName" />
							<div class="form-message"></div>
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-sm-3">收货人地区</label>
						<div class="col-sm-9 clearfix">
							<div style="width:130px;float:left" class="form-group-item">
								<select class="form-control" v-model="provinceId" name="ProvinceId">
									<option value="">请选择省份</option>
									<option v-for="i in provinces" v-bind:value="i.Id">{{i.Name}}</option>
								</select>
								<div class="form-message"></div>
							</div>
							<div style="width:130px;float:left" class="form-group-item" >
								<select class="form-control" v-model="cityId" name="CityId">
									<option value="">请选择城市</option>
									<option v-for="i in cities" v-bind:value="i.Id">{{i.Name}}</option>
								</select>
								<div class="form-message"></div>
							</div>
							<div  style="width:130px;float:left" class="form-group-item">
								<select class="form-control" v-model="districtId" name="DistrictId">
									<option value="">请选择地区</option>
									<option v-for="i in districts" v-bind:value="i.Id">{{i.Name}}</option>
								</select>
								<div class="form-message"></div>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-sm-3">收货人地址</label>
						<div class="col-sm-9">
							<input type="text" class="form-control" placeholder="请填写收货人地址"  maxlength="100" v-model="address" name="Address"/>
							<div class="form-message"></div>
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-sm-3">收货人电话</label>
						<div class="col-sm-9">
							<input type="text" class="form-control" style="width:200px"  placeholder="请填写收货人联系电话" maxlength="13" v-model="phone" name="ContactPhoneNumber"/>
							<div class="form-message"></div>
						</div>
					</div>
					<div class="form-group" v-if="!isCurDefault">
						<div class="col-sm-4 col-sm-offset-3">
							<label class="control-label"><input type="checkbox" name="IsDefaultAddress" value="true" /> 默认地址</label>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-3 col-sm-8 ">
							<div class="message"></div>
							<button class="btn btn-primary" type="submit">保存</button>
							<button class="btn btn-default" v-on:click="cancel()">取消</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>