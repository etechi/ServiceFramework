@{
	Layout = "../Shared/_UserSigninLayout.cshtml";
}
<div class="bind-phonenumber-panel">
	<form class="bind-phonenumber big">
		<div class="form-group">
			<label class="control-label sr-only" for="ident">手机号:</label>
			<div class="input-group">
				<span class="input-group-addon"><span class="fa fa-mobile"></span></span>
				<input class="form-control" placeholder="请输入您的手机号" maxlength="20" name="ident" type="text" />
			</div>
		</div>
		<div class="row">
			<div class="form-group col-sm-6">
				<label class="control-label sr-only" for="code">验证码:</label>
				<input class="form-control" maxlength="6" placeholder="请输入验证码" name="code" type="text" />
			</div>
			<div class="form-group col-sm-6">
				<button class="btn btn-primary send-code" type="button" data-action="sendVerifyCode">点击发送验证码</button>
			</div>
		</div>
		<div class="message"></div>
		<button type="submit" class="btn btn-primary submit">绑定手机号</button>
	</form>
</div>
@section scripts{
	<script>
        window.boot("user-bind-phonenumber");
	</script>
}