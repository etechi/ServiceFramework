@{
	Layout = "../Shared/_UserSigninLayout.cshtml";
}
<div class="reset-password-panel">
	<form class="reset-password big">
		<div class="form-group">
			<label class="control-label sr-only" for="ident">手机号:</label>
			<div class="input-group">
				<span class="input-group-addon"><span class="fa fa-mobile"></span></span>
				<input class="form-control" id="resetpassword-ident" placeholder="请输入您注册的手机号" maxlength="20" name="ident" type="text" />
			</div>
		</div>
		<div class="row">
			<div class="form-group col-sm-6">
				<label class="control-label sr-only" for="code">验证码:</label>
				<input class="form-control" id="resetpassword-code" maxlength="6" placeholder="请输入验证码" name="code" type="text" />
			</div>
			<div class="form-group col-sm-6">
				<button class="btn btn-primary send-code" type="button" data-action="sendVerifyCode">点击发送验证码</button>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label sr-only" for="password">密码:</label>
			<div class="input-group">
				<span class="input-group-addon"><span class="fa fa-key"></span></span>
				<input class="form-control" id="resetpassword-password" placeholder="请输入新密码" maxlength="20" name="password" type="password" />
				<span class="input-group-addon show-password"><span class="fa fa-eye"></span></span>
			</div>
		</div>
		<div class="message"></div>
		<button type="submit" class="btn btn-primary submit">重置密码</button>
		<div class="text-right links">
			<a href="/user/signin">再次登陆</a> | <a href="/user/signup">注册新用户</a>
		</div>
	</form>
</div>
@section scripts{
	<script>
	window.boot("user-reset-password");
	</script>
}